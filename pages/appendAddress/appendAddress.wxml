<!--pages/appendAddress/appendAddress.wxml-->
<view class="container">
    <view class='cell f-flex blank'>
        <text class='fs-28'>收货人</text>
        <input class='f-flex-fixed fs-28' bindinput="bindKeyInput" placeholder="名字" />
    </view>
    <view class='cell f-flex blank'>
        <text class='fs-28'>联系电话</text>
        <input type='number' class='f-flex-fixed fs-28' bindinput="bindKeyInput" placeholder="手机或固定电话" />
    </view>
    <view class="cell f-flex blank">
        <text class='fs-28'>选择地区</text>
        <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
            <view class="picker" style='font-size: 26rpx;color: #333;'>
                {{region[0]}} {{region[1]}} {{region[2]}}
            </view>
        </picker>
    </view>
    <view class="cell f-flex section">
        <text class='fs-28'>选择地区</text>
        <textarea bindblur="bindTextAreaBlur" placeholder="请填写详细地址,不少于5个字" />
    </view>
</view>