/* pages/order_confirm/order_confirm.wxss */
 
.m-goodList-row {
    box-sizing: border-box;
    width: 100%;
    border-top: 1px solid #cdcdcd;
    border-bottom: 1px solid #cdcdcd;
}

.address-confirm {
    padding-top: 23rpx;
    padding-bottom: 23rpx;
    width: 100%;
    border: 1px solid #cdcdcd;
}

.address-confirm image {
    padding-left: 29rpx;
    padding-right: 29rpx;
    width: 40rpx;
    height: 60rpx;
}

.address-confirm .link {
    width: 17rpx;
    height: 33rpx;
}

.address-confirm .address-txt {
    font-size: 26rpx;
    line-height: 46rpx;
}

.cart-item {
    width: 100%;
    background-color: #fff;
    overflow: hidden;
}

.cart-item .hold {
    box-sizing: border-box;
    margin-top: 14rpx;
    margin-bottom: 14rpx;
    padding-left: 42rpx;
    padding-right: 42rpx;
    background-color: #fff;
}

.cart-item .goodsImg {
    padding-left: 34rpx;
    padding-right: 20rpx;
    width: 200rpx;
    height: 200rpx;
}

.cart-item .info {
    font-size: 23rpx;
    line-height: 57rpx;
}

.cart-item .amount {
    font-size: 26rpx;
    line-height: 60rpx;
}

.cart-item .norm {
    padding-top: 30rpx;
    line-height: 22rpx;
}

.cart-item .norm text {
    padding-left: 4rpx;
    padding-right: 18rpx;
    font-size: 22rpx;
    color: #999;
}