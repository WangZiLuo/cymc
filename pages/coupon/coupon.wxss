/* pages/coupon/coupon.wxss */ 

page {
    height: 100%;
    background-color: #f2f2f2;
}

.swiper-tab {
    width: 100%;
    background-color: #fff;
}

.swiper-tab-list {
    position: relative;
    flex-grow: 1; 
    width: 33%;
    line-height: 91rpx;
    text-align: center;
    color: #648749;
}

.on::after {
    content: "";
    position: absolute;
    left: 50%;
    bottom: 5rpx;
    transform: translateX(-50%);
    width: 119rpx;
    height: 3px;
    background-color: #648749;
}

.tab-content {
    box-sizing: border-box;
    padding-top: 10rpx;
    width: 100%;
}

.tab-content .swiper {
    width: 100%;
    height: 100%;
}

.swiper swiper-item {
    box-sizing: border-box;
    padding-left: 25rpx;
    padding-right: 25rpx;
}

.item-ans {
    box-sizing: border-box;
    margin-top: 20rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
    height: 200rpx;
    width: 100%;
    background-color: #fff;
    overflow: hidden;
}

.item-ans .hold {
    height: 140rpx;
}

.item-ans .color {
    color: #648749;
}