<!--pages/coupon/coupon.wxml-->
<view class="container">
    <view class="swiper-tab f-flex">
        <view class="swiper-tab-list fs-23 {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">未使用</view>
        <view class="swiper-tab-list fs-23 {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">已过期</view>
        <view class="swiper-tab-list fs-23 {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">已使用</view>
    </view>
    <view class='tab-content f-flex-fixed'>
        <swiper class="swiper" current="{{currentTab}}" duration="300" bindchange="switchTab">
            <swiper-item wx:for="{{coupon}}" wx:key="index">
                <scroll-view scroll-y="true" class="scoll-h">
                    <block wx:for="{{item.list}}" wx:key="index">
                        <view class="item-ans">
                            {{item.content}}
                        </view>
                    </block>
                </scroll-view>
            </swiper-item>
        </swiper>
    </view>
</view>