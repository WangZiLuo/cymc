/* pages/cart/cart.wxss */

page { 
    background-color: #f2f2f2;
}

.cart-totalBar {
    position: fixed;
    z-index: 10;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: #fff;
}

.cart-totalBar .checked text {
    color: #000;
}

.cart-totalBar .check text {
    color: #999;
}

.btn-check image {
    padding-left: 48rpx;
    padding-right: 13rpx;
    width: 46rpx;
    height: 46rpx;
}

.btn-check text {
    padding-left: 8rpx;
    padding-right: 28rpx;
    font-size: 24rpx;
    color: #999;
}

.cart-totalBar .btn-settle {
    width: 200rpx;
    height: 100rpx;
    font-size: 30rpx;
    line-height: 100rpx;
    color: #fff;
    text-align: center;
    background-color: #648749;
}

.cart-totalBar .cart-total {
    padding-right: 37rpx;
}

.cart-totalBar .cart-total .word {
    color: #333;
    font-size: 24rpx;
}

.cart-totalBar .cart-total .num {
    font-size: 36rpx;
    color: #648749;
}

.m-cart-row {
    box-sizing: border-box;
    padding-bottom: 120rpx;
    width: 100%;
}

.cart-item {
    width: 100%; 
    position: relative;
    margin-bottom: 20rpx;
    height: 258rpx;
    background-color: #fff;
    overflow: hidden;
}

.cart-item .slipDelete {
    position: absolute;
    top: 0;
    right: 0;
    margin-top: 26rpx;
    margin-bottom: 26rpx;
    width: 100rpx;
    height: 200rpx;
    background-color: #648749;
    font-size: 24rpx;
    line-height: 200rpx;
    text-align: center;
    color: #fff;
}

.cart-item .hold {
    box-sizing: border-box;
    position: absolute;
    z-index: 5;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    transition: left 0.15s ease-in-out;
    margin-top: 26rpx;
    margin-bottom: 26rpx;
    padding-left: 42rpx;
    padding-right: 42rpx;
    background-color: #fff;
}

.cart-item .btn-check {
    height: 200rpx;
}

.cart-item .btn-check image {
    padding-left: 16rpx;
    padding-right: 16rpx;
}

.cart-item .goodsImg {
    padding-left: 34rpx;
    padding-right: 20rpx;
    width: 200rpx;
    height: 200rpx;
}

.cart-item .info {
    font-size: 23rpx;
    line-height: 57rpx;
}

.cart-item .amount {
    font-size: 36rpx;
    line-height: 60rpx;
}

.cart-item .norm {
    padding-top: 30rpx;
    line-height: 22rpx;
}

.cart-item .norm text {
    padding-left: 4rpx;
    padding-right: 18rpx;
    font-size: 22rpx;
    color: #999;
}
